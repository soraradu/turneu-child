<div id="users_shoping_table">
    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>Product Image</th>
                <th>Product Name</th>
                <th>User Name</th>
                <th>Purchase Date</th>
            </tr>
        </thead>
        <tbody>
                {% set count = 1 %}
                {% for product in all_products %}
                    <tr>
                        <td>{{count}}</td>
                        <td><img src="{{product.img_link.0}}" alt=""></td>
                        <td><a href="{{product.post_id}}">{{product.product_name}}</a></td>
                        <td><a href="{{product.user_link}}">{{product.user_name}}</a></td>
                        <td>{{product.purchase_date}}</td>
                    </tr>
                    {% set count = count+1 %}
                {% endfor %}
        </tbody>
    </table>
</div>